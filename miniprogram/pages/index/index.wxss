.top{
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 130rpx 0 0 0
}

.top .img{
  width: 300rpx;
  height: 130rpx;
  margin: 28rpx 30rpx;
}

.mid {
  margin: 23rpx 0 0 95rpx;
  width: 680rpx;
  height:600rpx;
  border-radius: 20px;
  position: relative;
}

.mid .bg1{
  margin-left:-30rpx;
  width: 640rpx;
  height: 570rpx;
  border-radius: 20px;
  position: absolute;
  top: 0;
}

.mid .bg2{
  margin-left:-28rpx;
  width: 620rpx;
  height: 580rpx;
  border-radius: 20px;
  position: absolute;
  top: 0;
  left: 10rpx;
  opacity: 0.6
}

.mid .bg3{
  width: 350rpx;
  height: 540rpx;
  border-radius: 20px;
  position: absolute;
  top: 50rpx;
  left: 120rpx;
  opacity: 0.2;
}

.mid .bg4{
  margin-left:-30rpx;
  width: 560rpx;
  height: 590rpx;
  border-radius: 20px;
  position: absolute;
  opacity: 0.3;
  left: 40rpx
}

.mid .card{
  color: #5073CC;
  position: absolute;
  z-index: 999;
}

.mid .scale{
  width: 560rpx;
  height: 50rpx;
  margin-left: 20rpx;
  margin-top: 10rpx;
  text-align: center;
  font-size:30rpx
}

.mid .text{
  width: 560rpx;
  height: 300rpx;
  text-align: center;
  color: white;
  font-size: 50rpx;
  word-break:break-all;
  margin-top: 100rpx
}

.mid .assess{
  font-size: 30rpx;
  margin-left: 78rpx;
  margin-top: -20rpx;
}

.mid .assess .img{
  width: 80rpx;
  height: 80rpx;
}

.mid .assess .badAssess{
  float: left;
  position: absolute;
}

.mid .assess .goodAssess{
  position: absolute;
  left: 425rpx;
}

.mid .assess .assess-data{
  color: black;
  margin-left: 30rpx
}

.bottom{
    display: flex;
    justify-content: space-around;
    margin: 60rpx 50rpx
}

.bottom .button{
   width: 100rpx;
   height: 100rpx;
   border-radius: 50%;
   position: relative;
   background-color: #6E06AD
}

.bottom .bottom-left image{
  width: 100rpx;
  height: 100rpx;
  float: left;
  position: absolute;
  left: 0;
}

.bottom .bottom-mid image{
  width: 340rpx;
  height: 100rpx;
  float: left
}

.bottom .bottom-bottom image{
  width: 100rpx;
  height: 100rpx;
  float: left
}
